@page
@model razorweb.Pages_Blog.IndexModel

@{
    ViewData["Title"] = "Cac bai viet";
    int i = 0;
}


<h1>Danh sach bai viet</h1>
<form method="get" asp-page="./Index">
    <label for="">Tim kiem</label>
    <input type="text" name="Search">
    <button type="submit">Tim</button>
</form>
<p>
    <a asp-page="Create" class="btn btn-primary">Tao bai viet moi</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Created)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Article) {
        <tr>
            <td>@(++i)</td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
          
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Chinh sua</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Chi tiet</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Xoa</a>
            </td>
        </tr>
}
    </tbody>
</table>
@{
    var pagingModel = new c_.git.razorweb.Helpers.PagingModel()
    {
         currentPage = Model.currentPage,    // trang hiện tại
        countPages  = Model.countPages,   // tổng  số trang 
        generateUrl = (int? p) => Url.Page("/Blog/Index", new {p =p})
    }; 
}
<partial name="_PagingXTL" model="@pagingModel" />