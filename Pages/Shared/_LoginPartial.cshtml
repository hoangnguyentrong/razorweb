@using Microsoft.AspNetCore.Identity
@using c_.git.razorweb.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager  

@{

}

<ul class="navbar-nav">

  @if(SignInManager.IsSignedIn(User))
  {
    
     <li class="nav-item">
    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">
    Xin chao @UserManager.GetUserName(User)
    </a>
  </li> 
  <li class="nav-item">
    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Logout">Dang Xuat</a>
  </li>
  }
  else{
      <li class="nav-item">
    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Dang Ky</a>
  </li> 
  <li class="nav-item">
    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Dang Nhap</a>
  </li>

  }

</ul>
